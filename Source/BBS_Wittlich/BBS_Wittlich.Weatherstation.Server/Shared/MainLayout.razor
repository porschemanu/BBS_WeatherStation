@inherits LayoutComponentBase
@using MudBlazor
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        BBS Weatherstation
    </MudAppBar>
    <MudDrawer  ClipMode="@DrawerClipMode.Always" @bind-Open="@_drawerOpen">
        <MudNavMenu>
            <MudNavLink Href="/dashboard" Match="NavLinkMatch.All">Dashboard</MudNavLink>
            <MudNavLink Href="/tvview" Match="NavLinkMatch.Prefix">TV-View</MudNavLink>
            <MudNavLink Href="/doku" Match="NavLinkMatch.Prefix">Dokumentation</MudNavLink>
            <MudNavLink Href="/area51" Match="NavLinkMatch.Prefix">Dokumentation</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
