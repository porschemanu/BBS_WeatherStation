@inherits LayoutComponentBase

<PageTitle>Server</PageTitle>
<MudThemeProvider Theme="Mud.Theme.BBSTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>


<MudLayout Class="overflow-hidden">
    <MudAppBar Elevation="2">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
		<MudImage Src="img/logo-header.png" Height="55"/>
        <MudText Typo="Typo.h5" Class="ml-3">Wetterstation</MudText>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="1">
        <MudNavLink Href="/">Index</MudNavLink>
        <MudNavLink Href="/live">LiveView</MudNavLink>
        <MudNavLink Href="/dashboard">Dashboard</MudNavLink>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
